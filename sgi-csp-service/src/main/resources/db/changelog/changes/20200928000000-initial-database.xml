<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <!-- ########################################################## -->
  <!-- SEQUENCE -->
  <!-- ########################################################## -->
  <changeSet author="master" id="20200928000000-tipo_documento_seq">
    <createSequence sequenceName="tipo_documento_seq" />
  </changeSet>
  <changeSet author="master" id="20200928000000-tipo_hito_seq">
    <createSequence sequenceName="tipo_hito_seq" />
  </changeSet>

  <changeSet author="master" id="20200928000000-tipo_finalidad_seq">
    <createSequence sequenceName="tipo_finalidad_seq" />
  </changeSet>

  <!-- ########################################################## -->
  <!-- TABLE -->
  <!-- ########################################################## -->
  <changeSet author="master" id="20200928000000-tipo_documento">
    <createTable tableName="tipo_documento">
      <column name="id" type="BIGINT" defaultValueSequenceNext="tipo_documento_seq">
        <constraints nullable="false" primaryKey="true" primaryKeyName="tipo_documento_pk" />
      </column>
      <column name="nombre" type="VARCHAR(50)">
        <constraints nullable="false" />
      </column>
      <column name="descripcion" type="VARCHAR(250)" />
      <column name="activo" type="BOOLEAN" defaultValueBoolean="true">
        <constraints nullable="false" />
      </column>
    </createTable>
  </changeSet>
  <changeSet author="master" id="20200928000000-tipo_hito">
    <createTable tableName="tipo_hito">
      <column name="id" type="BIGINT" defaultValueSequenceNext="tipo_hito_seq">
        <constraints nullable="false" primaryKey="true" primaryKeyName="tipo_hito_pk" />
      </column>
      <column name="nombre" type="VARCHAR(50)">
        <constraints nullable="false" />
      </column>
      <column name="descripcion" type="VARCHAR(250)" />
      <column name="activo" type="BOOLEAN" defaultValueBoolean="true">
        <constraints nullable="false" />
      </column>
    </createTable>
  </changeSet>

  <changeSet author="master" id="20200928000000-tipo_finalidad">
    <createTable tableName="tipo_finalidad">
      <column name="id" type="BIGINT" defaultValueSequenceNext="tipo_finalidad_seq">
        <constraints nullable="false" primaryKey="true" primaryKeyName="tipo_finalidad_pk" />
      </column>
      <column name="nombre" type="VARCHAR2(50)">
        <constraints nullable="false" />
      </column>
      <column name="descripcion" type="VARCHAR2(250)" />
      <column name="activo" type="BOOLEAN" defaultValueBoolean="true">
        <constraints nullable="false" />
      </column>
    </createTable>
  </changeSet>

  <!-- ########################################################## -->
  <!-- UNIQUE CONSTRAINT -->
  <!-- ########################################################## -->
  <changeSet author="master" id="20200928000000-tipo_documento_uk">
    <addUniqueConstraint columnNames="nombre" constraintName="tipo_documento_uk" tableName="tipo_documento" />
  </changeSet>

  <changeSet author="master" id="20200928000000-tipo_finalidad_uk">
    <addUniqueConstraint columnNames="nombre" constraintName="tipo_finalidad_uk" tableName="tipo_finalidad" />
  </changeSet>

  <changeSet author="master" id="20200928000000-tipo_hito_uk">
    <addUniqueConstraint columnNames="nombre" constraintName="tipo_hito_uk" tableName="tipo_hito" />
  </changeSet>
  <!-- ########################################################## -->
  <!-- INDEX -->
  <!-- ########################################################## -->

</databaseChangeLog>
