[
  {
    "key": "ap3_4_2",
    "wrappers": [
      "title-div"
    ],
    "templateOptions": {
      "expressionLock": "formState.memoria.tipo === 'RATIFICACION'",
      "label": "3.4.2 Recruitment carried out by personnel outside the research team"
    },
    "hideExpression": "!formState.mainModel.ap3_4.intervencionesSeresHumanosRadio || formState.mainModel.ap3_4.intervencionesSeresHumanosRadio === 'no'",
    "fieldGroup": [
      {
        "template": "<p>Is the recruitment going to be carried out by someone outside the research team?</p>"
      },
      {
        "key": "reclutamientoPersonalAjenoRadio",
        "type": "radio",
        "templateOptions": {
          "label": "Choose an option:",
          "required": true,
          "options": [
            {
              "value": "no",
              "label": "No"
            },
            {
              "value": "si",
              "label": "Yes"
            }
          ]
        }
      },
      {
        "template": "<p>Are you receiving any compensation?</p>",
        "hideExpression": "!model.reclutamientoPersonalAjenoRadio || model.reclutamientoPersonalAjenoRadio === 'no'"
      },
      {
        "key": "tipoCompensacionRadio",
        "type": "radio",
        "hideExpression": "!model.reclutamientoPersonalAjenoRadio || model.reclutamientoPersonalAjenoRadio === 'no'",
        "templateOptions": {
          "label": "Choose an option:",
          "required": true,
          "options": [
            {
              "value": "no",
              "label": "No"
            },
            {
              "value": "si",
              "label": "Yes"
            }
          ]
        }
      },
      {
        "key": "tipoCompensacionTexto",
        "type": "i18n-textarea",
        "hideExpression": "(!model.reclutamientoPersonalAjenoRadio || model.reclutamientoPersonalAjenoRadio === 'no') || ((!model.reclutamientoPersonalAjenoRadio || model.reclutamientoPersonalAjenoRadio === 'si') && (!model.tipoCompensacionRadio || model.tipoCompensacionRadio === 'no'))",
        "templateOptions": {
          "label": "Type of compensation",
          "placeholder": "Type of compensation",
          "required": true,
          "autosize": true,
          "autosizeMinRows": "1",
          "autosizeMaxRows": "10"
        }
      },
      {
        "wrappers": [
          "info-div"
        ],
        "template": "<p>Note: If the recruitment is carried out from a centre outside the University, and which also authorises the carrying out of such project in its facilities, with its associates, etc. should be added in section '5.3.' the authorisation document of the centre in which the recruitment task will be detailed.</p>"
      }
    ]
  }
]