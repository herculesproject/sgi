[
  {
    "key": "ap2_1",
    "wrappers": [
      "expansion-panel"
    ],
    "templateOptions": {
      "label": "2.1 Personnel carrying out work with biological agents, genetically modified organisms, hazardous chemicals, radioactive substances and/or nanoparticles"
    },
    "fieldGroup": [
      {
        "template": "<p>Below are all the members of the research team. Add in this section any other person who collaborates in the project carrying out tasks related to biological agents, genetically modified organisms, hazardous chemicals, radioactive substances and/or nanoparticles.<br><br>Please specify for each person:<br><ul><li>Identification data (name, email, links to the University).</li><li>Specific training in biological risks.</li><li>Accrediting agency (specify university or agency).</li><li>Year.</li></ul></p>"
      },
      {
        "wrappers": [
          "info-div"
        ],
        "template": "This section is completed automatically based on the data entered in the section <a href='#MODULE_PATH#/peticiones-evaluacion/#PETICION_EVALUACION_ID#/tareas' target='_blank'><b>Task assignment</b></to> of the <b>Evaluation Request</b>. Access this menu item to make the necessary modifications.",
        "templateOptions": {
          "replaceTemplatePlaceholders": true
        }
      },
      {
        "type": "table-crud",
        "key": "equipoInvestigador",
        "templateOptions": {
          "entity": "equipo investigador",
          "gender": "male",
          "disabled": true
        },
        "fieldArray": {
          "templateOptions": {
            "text": "Equipo investigador"
          },
          "fieldGroup": [
            {
              "key": "nombre",
              "type": "input",
              "templateOptions": {
                "label": "Name",
                "order": 10,
                "expressionModelValue": "formState.tareas[$1].equipoTrabajo.persona?.nombre"
              }
            },
            {
              "key": "apellidos",
              "type": "input",
              "templateOptions": {
                "label": "Surname",
                "order": 20,
                "expressionModelValue": "formState.tareas[$1].equipoTrabajo.persona?.apellidos"
              }
            },
            {
              "key": "email",
              "type": "input",
              "templateOptions": {
                "label": "E-mail",
                "order": 30,
                "expressionModelValue": "formState.tareas[$1].equipoTrabajo.persona?.emails?.find((e)=>e.principal)?.email"
              }
            },
            {
              "key": "vinculacion",
              "type": "input",
              "templateOptions": {
                "label": "Links",
                "order": 40,
                "expressionModelValue": "formState.tareas[$1].equipoTrabajo.persona?.vinculacion?.categoriaProfesional?.nombre"
              }
            },
            {
              "key": "nivelAcademico",
              "type": "input",
              "templateOptions": {
                "label": "Academic level",
                "order": 50,
                "expressionModelValue": "formState.tareas[$1].equipoTrabajo.persona.datosAcademicos?.nivelAcademico?.nombre"
              }
            },
            {
              "key": "tarea",
              "type": "input",
              "templateOptions": {
                "label": "Task",
                "order": 60,
                "expressionModelValue": "formState.tareas[$1].tarea"
              }
            },
            {
              "key": "experiencia",
              "type": "input",
              "templateOptions": {
                "label": "Biological risk training",
                "order": 70,
                "expressionModelValue": "formState.tareas[$1].formacion"
              }
            },
            {
              "key": "organismo",
              "type": "input",
              "templateOptions": {
                "label": "Accrediting agency",
                "order": 80,
                "expressionModelValue": "formState.tareas[$1].organismo"
              }
            },
            {
              "key": "anio",
              "type": "input",
              "templateOptions": {
                "label": "Year",
                "order": 90,
                "expressionModelValue": "formState.tareas[$1].anio"
              }
            }
          ]
        }
      }
    ]
  }
]