<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
  <property name="schemaPrefix" value="" />
  <property name="defaultLang" value="es" />

  <changeSet author="master" id="0.3.0-1">
    <createTable tableName="empresa_nombre_razon_social">
      <column name="empresa_id" type="BIGINT">
        <constraints nullable="false" />
      </column>
      <column name="lang" type="VARCHAR(2)">
        <constraints nullable="false" />
      </column>
      <column name="value_" type="VARCHAR(50)">
        <constraints nullable="false" />
      </column>
    </createTable>

    <addPrimaryKey tableName="empresa_nombre_razon_social" columnNames="empresa_id, lang" />

    <addForeignKeyConstraint baseColumnNames="empresa_id"
      baseTableName="empresa_nombre_razon_social"
      constraintName="FK_EMPRESANOMBRERAZONSOCIAL_EMPRESA" deferrable="false"
      initiallyDeferred="false"
      referencedColumnNames="id" referencedTableName="empresa" validate="true" />

    <sql>INSERT INTO ${schemaPrefix}empresa_nombre_razon_social(empresa_id, value_, lang) SELECT id,
      nombre_razon_social, '${defaultLang}' FROM ${schemaPrefix}empresa WHERE nombre_razon_social IS
      NOT NULL</sql>

    <dropColumn columnName="nombre_razon_social" tableName="empresa" />
  </changeSet>

  <changeSet author="master" id="0.3.0-2">
    <createTable tableName="empresa_objeto_social">
      <column name="empresa_id" type="BIGINT">
        <constraints nullable="false" />
      </column>
      <column name="lang" type="VARCHAR(2)">
        <constraints nullable="false" />
      </column>
      <column name="value_" type="VARCHAR(1000)">
        <constraints nullable="false" />
      </column>
    </createTable>

    <addPrimaryKey tableName="empresa_objeto_social" columnNames="empresa_id, lang" />

    <addForeignKeyConstraint baseColumnNames="empresa_id"
      baseTableName="empresa_objeto_social"
      constraintName="FK_EMPRESAOBJETOSOCIAL_EMPRESA" deferrable="false"
      initiallyDeferred="false"
      referencedColumnNames="id" referencedTableName="empresa" validate="true" />

    <sql>INSERT INTO ${schemaPrefix}empresa_objeto_social(empresa_id, value_, lang) SELECT id,
      objeto_social, '${defaultLang}' FROM ${schemaPrefix}empresa WHERE objeto_social IS NOT NULL</sql>

    <dropColumn columnName="objeto_social" tableName="empresa" />
  </changeSet>

  <changeSet author="master" id="0.3.0-3">
    <createTable tableName="empresa_conocimiento_tecnologia">
      <column name="empresa_id" type="BIGINT">
        <constraints nullable="false" />
      </column>
      <column name="lang" type="VARCHAR(2)">
        <constraints nullable="false" />
      </column>
      <column name="value_" type="VARCHAR(1000)">
        <constraints nullable="false" />
      </column>
    </createTable>

    <addPrimaryKey tableName="empresa_conocimiento_tecnologia" columnNames="empresa_id, lang" />

    <addForeignKeyConstraint baseColumnNames="empresa_id"
      baseTableName="empresa_conocimiento_tecnologia"
      constraintName="FK_EMPRESACONOCIMIENTOTECNOLOGIA_EMPRESA" deferrable="false"
      initiallyDeferred="false"
      referencedColumnNames="id" referencedTableName="empresa" validate="true" />

    <sql>INSERT INTO ${schemaPrefix}empresa_conocimiento_tecnologia(empresa_id, value_, lang) SELECT
      id, conocimiento_tecnologia, '${defaultLang}' FROM ${schemaPrefix}empresa WHERE
      conocimiento_tecnologia IS NOT NULL</sql>

    <dropColumn columnName="conocimiento_tecnologia" tableName="empresa" />
  </changeSet>

  <changeSet author="master" id="0.3.0-4">
    <createTable tableName="empresa_notario">
      <column name="empresa_id" type="BIGINT">
        <constraints nullable="false" />
      </column>
      <column name="lang" type="VARCHAR(2)">
        <constraints nullable="false" />
      </column>
      <column name="value_" type="VARCHAR(250)">
        <constraints nullable="false" />
      </column>
    </createTable>

    <addPrimaryKey tableName="empresa_notario" columnNames="empresa_id, lang" />

    <addForeignKeyConstraint baseColumnNames="empresa_id"
      baseTableName="empresa_notario"
      constraintName="FK_EMPRESANOTARIO_EMPRESA" deferrable="false"
      initiallyDeferred="false"
      referencedColumnNames="id" referencedTableName="empresa" validate="true" />

    <sql>INSERT INTO ${schemaPrefix}empresa_notario(empresa_id, value_, lang) SELECT id, notario,
      '${defaultLang}' FROM ${schemaPrefix}empresa WHERE notario IS NOT NULL</sql>

    <dropColumn columnName="notario" tableName="empresa" />
  </changeSet>
</databaseChangeLog>