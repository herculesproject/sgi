{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@herculesproject/framework": [
        "projects/sgi/framework/public-api.ts"
      ],
      "@herculesproject/framework/auth": [
        "projects/sgi/framework/auth/public-api.ts"
      ],
      "@herculesproject/framework/core": [
        "projects/sgi/framework/core/public-api.ts"
      ],
      "@herculesproject/framework/http": [
        "projects/sgi/framework/http/public-api.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
