<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
  <property name="schemaPrefix" value="" />
  <property name="defaultLang" value="es" />

  <changeSet context="!test" author="master" id="00.08.00-resources-update-oracle">

    <!-- rep-common-header-logo -->
    <!-- Update value if mach default_value -->
    <customChange class="org.crue.hercules.sgi.cnf.liquibase.UpdateResourcesValue">
      <param name="resourceName" value="rep-common-header-logo" />
      <param name="valueBlobFile"
        value="classpath:db/changelog/changes/0.8.0/blob/rep/rep-common-header-logo.png" />
    </customChange>
    <update tableName="resources">
      <column name="default_value" valueBlobFile="blob/rep/rep-common-header-logo.png" />
      <where>:name=:value</where>
      <whereParams>
        <param name="name" value="rep-common-header-logo" />
      </whereParams>
    </update>
  </changeSet>

  <changeSet context="!test" author="master" id="00.08.00-config-i18n">
    <insert tableName="config">
      <column name="name" value="i18n-enabled-languages" />
      <column name="description"
        value="Listado JSON de los cÃ³digos de idioma habilitados" />
      <column name="value" value="[&quot;${defaultLang}&quot;]" />
    </insert>

    <insert tableName="config">
      <column name="name" value="i18n-languages-priority" />
      <column name="description"
        value="Orden de prioridad de idiomas en formato JSON" />
      <column name="value" value="[&quot;es&quot;, &quot;en&quot;, &quot;eu&quot;]" />
    </insert>

    <update tableName="resources">
      <column name="name" value="web-i18n-${defaultLang}" />
      <column
        name="description" value="i18n ${defaultLang}" />
      <where>:name=:value</where>
      <whereParams>
        <param name="name" value="web-i18n-es" />
      </whereParams>
    </update>
  </changeSet>

</databaseChangeLog>